---
import { SITE } from '@/AppConfig';
import type { MetaSEO } from '@/types';
import '@/assets/styles/style.css';
import MetaHeader from '@/components/MetaHeader.astro';
import Footer from '@/components/layout/Footer.astro';
import Header from '@/components/layout/Header.astro';
import Script from '@/components/Script.astro';
import Anouncement from '@/components/contact/Anouncement.astro';
import ContactBanner from '@/components/contact/ContactBanner.astro';

export interface Props {
  meta?: MetaSEO;
}
const { meta = {} } = Astro.props;
const { language = 'en', textDirection = 'ltr' } = SITE;
---

<!DOCTYPE html>
<html lang={language} dir={textDirection} class="tracking-tight antialiased">
  <head>
    <MetaHeader {...meta} />
  </head>

  <body class="scroll-smooth">
    <Anouncement />
    <Header isSticky />
    <main class="layout">
      <slot />
    </main>
    <ContactBanner />
    <Footer />
    <Script />
  </body>
</html>
